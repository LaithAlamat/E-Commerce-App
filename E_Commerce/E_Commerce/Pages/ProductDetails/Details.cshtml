@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model E_Commerce.Pages.Product_Details.DetailsModel
@{
}



@if (@Model.Product != null)
{
    var product = Model.Product;
    <h2>@product.Name</h2>
    @if (product.URL != "")
    {
        <img src="@product.URL" width=200 />
    }
    <h3>Price: @product.Price</h3>
    <h3>Availablility: @product.InStock</h3>
    <h3>Details: @product.Description</h3>

    @if (User.Identity.IsAuthenticated)
    {
        <form method="post">
            <a asp-page=""> <button type="submit" class="btn btn-primary btn-block">Add to Cart</button></a>
        </form>
    }

}