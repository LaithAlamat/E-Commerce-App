@using E_Commerce.Models
@model dynamic
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<button>
    <a asp-action="Add" asp-controller="Product" class="headertag">Add Product</a>
</button>
<table>
    <tr>
        <th>ProductID</th>
        <th>ProductName</th>
        <th>CategoryID</th>
        <th>InStock</th>
        <th>Price</th>
        <th>Description</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-controller="Home" asp-action="Index" asp-route-cartID=@item.ID asp-route-userID=@item.Name>
                    @if (@item.URL != "")
                    {
                        <img src="@item.URL" width=200 />
                    }
                    @item.ID @item.Name @item.CategoryID @item.InStock @item.Price @item.Description <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ID" class="headertag">Delete</a> <a asp-action="Update" asp-controller="Product" asp-route-id="@item.ID">Edit</a>
                </a>
            </td>
        </tr>
    }
</table>