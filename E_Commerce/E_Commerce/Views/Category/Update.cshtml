@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model E_Commerce.Models.Category

<h3>Edit Category</h3>

<form asp-controller="Category" asp-action="Update" method="post">
    <input hidden asp-for="@Model.ID" />

   
    <label>
        <span>Name</span>
        <input asp-for="@Model.Name" />
    </label>
    <label>
        <span>Details</span>
        <input asp-for="@Model.Description" />
    </label>
    <button type="submit"> Save</button>
</form>

<a asp-action="Delete" asp-controller="Category" asp-route-id="@Model.ID">Delete</a>
<div asp-validation-summary="All"></div>