@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model E_Commerce.Models.Category

<!DOCTYPE html>
<html>
<head>
    <title>Edit Page</title>
</head>
<body>
    <h3>Edit Category</h3>

    <form asp-controller="Category" asp-action="Update" method="post" class="px-4 py-3">
        <input hidden asp-for="@Model.ID" />

        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input asp-for="@Model.Name" name="Name" class="form-control">
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Details</label>
            <input asp-for="@Model.Description" name="Details" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

    <div asp-validation-summary="All"></div>
</body>
</html>